{
  "name": "@ecrowjs/npmpack",
  "version": "1.0.0",
  "description": "A clean way to publish an NPM Package in your workspace by preparing it in a subfolder.",
  "main": "index.js",
  "bin": {
    "npmpack": "npmpack.js"
  },
  "scripts": {
    "cli": "node npmpack.js",
    "tscli": "rimraf pkg/* && ts-node-script npmpack.ts",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "clean": "rimraf ./*.js ./*.js.map ./*.d.ts ./src/*.js ./src/*.js.map ./src/*.d.ts",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ecrowjs/npmpack.git"
  },
  "keywords": [
    "npm",
    "package",
    "publish",
    "prepare",
    "subfolder",
    "workspace",
    "node",
    "js",
    "library"
  ],
  "author": "Eric Crowell",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ecrowjs/npmpack/issues"
  },
  "homepage": "https://github.com/ecrowjs/npmpack#readme",
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/yargs": "^15.0.4",
    "jest": "^25.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@types/fs-extra": "^8.1.0",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "yargs": "^15.3.1"
  }
}
